@inherits ForsightTester.Shared.AccordionInputBase

@* ---------- markup ---------- *@
<div class="motor-wrapper my-2 mx-2">
    <div class="accordion accordion-primary" id="@ParentId">
        <div class="accordion-item motor-card">
            <h2 class="accordion-header" id="@HeadingId">
                <button class="accordion-button"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#@CollapseId"
                        aria-controls="@CollapseId"
                        aria-expanded="true"
                        style="background: transparent;">
                    CHU Led control
                </button>
            </h2>

            <div id="@CollapseId"
                 class="accordion-collapse collapse show"
                 aria-labelledby="@HeadingId"
                 data-bs-parent="#@ParentId">

                <div class="accordion-body" style="padding:0;">
                    <table class="table table-sm motor-table mb-0" style="@TableStyle">
                        <thead>
                            <tr>
                                <th class="text-center" style="width:20%;">Led</th>
                                <th class="text-center" style="width:30%;">Config&nbsp;%</th>
                                <th class="text-center" style="width:25%;">Current</th>
                                <th class="text-center" style="width:25%;">Max Led</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Leds.Count; i++)
                            {
                                int Locali = i;
                                <tr>
                                    <td class="text-left">@Leds[Locali]</td>
                                    <td class="text-center">
                                        <input type="number"
                                               class="form-control motor-input empty @GetInputClass(ConfigValues[Locali])"
                                               style="max-width:80px;margin:auto;"
                                               min="0" max="100"
                                               @bind="ConfigValues[Locali]"
                                               @bind:event="oninput" />
                                    </td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span>@CurrentValues[Locali]</span>
                                            <span>(mA)</span>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span>@MaxValues[Locali]</span>
                                            <span>(mA)</span>
                                        </div>
                                    </td>
                                </tr>
                            }
                            <tr>
                                <td colspan="4" class="text-center">
                                    <div class="d-flex justify-content-center">
                                        <button type="button" class="btn btn-sm mx-md-1 btn-primary btn-wave" @onclick="DefaultClicked">Default</button>
                                        <button type="button" class="btn btn-sm mx-md-1 btn-primary btn-wave" @onclick="AllOffClicked">All Off</button>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td colspan="4" class="text-center h-100">
                                    <div class="d-flex flex-column justify-content-end align-items-center h-100">
                                        <button class="btn btn-sm motor-btn w-25" title="Send" @onclick="SendConfig">
                                            Send
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    /* ---------- unique IDs via IdPrefix ---------- */
    [Parameter] public string IdPrefix { get; set; } = Guid.NewGuid().ToString("N");
    [Parameter] public string? TableStyle { get; set; }

    private string ParentId => $"accordion_CHULed_{IdPrefix}";
    private string HeadingId => $"heading_CHULed_{IdPrefix}";
    private string CollapseId => $"collapse_CHULed_{IdPrefix}";

    /* ---------- original component logic ---------- */
    private List<string> Leds { get; } = new() { "CoaxL", "CoaxR", "Parax", "WFow" };

    [Parameter] public string[] ConfigValues { get; set; } = Array.Empty<string>();
    [Parameter] public double[] CurrentValues { get; set; } = Array.Empty<double>();
    [Parameter] public double[] MaxValues { get; set; } = Array.Empty<double>();
    [Parameter] public EventCallback DefaultClicked { get; set; }
    [Parameter] public EventCallback AllOffClicked { get; set; }
    [Parameter] public EventCallback SendConfig { get; set; }

    protected string GetInputClass(string value)
        => string.IsNullOrWhiteSpace(value)
           ? "empty"
           : (int.TryParse(value, out var n) && n is >= 0 and <= 100 ? "valid" : "invalid");
}
