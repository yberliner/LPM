    @using CardModel
    @code {

        [Parameter] public List<TableText>? TableHeader { get; set; }
        [Parameter] public RenderFragment? ChildContent { get; set; }
        [Parameter] public bool ShowCheckbox { get; set; }
        [Parameter] public string? Tableclass { get; set; }
        [Parameter] public string? TableId { get; set; }
        [Parameter] public string? TableHeadclass { get; set; }
        [Parameter] public string? TableFootclass { get; set; }
        [Parameter] public string? TableResponsiveclass { get; set; }
        [Parameter] public string? TableStyle { get; set; }
        [Parameter] public EventCallback<bool> SelectAllClick { get; set; }

        [Parameter(CaptureUnmatchedValues = true)]
        public Dictionary<string, object>? AdditionalAttributes { get; set; }
        [Parameter] public bool TableFoot { get; set; } = false;
        [Parameter] public RenderFragment? ChildContent2 { get; set; }
    }

    <div class="table-responsive @TableResponsiveclass">
    <table class="table @Tableclass" Style="@TableStyle">
        @if (TableHeader != null && TableHeader.Count > 0)
            {
                <thead class="@TableHeadclass">
                    <tr>
                        @if (ShowCheckbox) 
                        {
                            <th>
                                <input class="form-check-input" type="checkbox" value="" aria-label="..." @onchange="@(async e => {
                                    if (e.Value is bool isChecked) {
                                        await SelectAllClick.InvokeAsync(isChecked);
                                    }
                                })">
                            </th>
                        }
                        @if (TableHeader != null) 
                        {
                            @foreach (var column in TableHeader)
                            {
                                <th class="@(string.IsNullOrWhiteSpace(column.HeaderClass) ? null : column.HeaderClass)">
                                    @((MarkupString)column.Title)
                                </th>
                            }
                        }
                    </tr>
                </thead>
            }
            <tbody  @attributes="AdditionalAttributes">
                @if (ChildContent != null)
                {
                    @ChildContent
                }
            </tbody>
            @if (TableFoot == true) 
            {
                <tfoot class="@TableFootclass">
                    @if (ChildContent2 != null)
                    {
                        @ChildContent2
                    }
                </tfoot>
            }
        </table>
    </div>

