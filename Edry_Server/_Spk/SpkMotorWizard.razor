@using CardModel
@inherits ForsightTester.Shared.AccordionInputBase

<div class="motor-wrapper my-2 mx-2">
    <div class="accordion accordion-primary" id="accordion_@IdPrefix">
        <div class="accordion-item motor-card">
            <h2 class="accordion-header" id="heading_@IdPrefix">
                <button class="accordion-button"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapse_@IdPrefix"
                aria-controls="collapse_@IdPrefix"
                aria-expanded="true"
                style="background: transparent;">
                    @Name
                </button>
            </h2>

            <div id="collapse_@IdPrefix"
            class="accordion-collapse collapse show"
            aria-labelledby="heading_@IdPrefix"
            data-bs-parent="#accordion_@IdPrefix">

                <div class="accordion-body" style="padding:0;">
                    <div class="row ms-3">
                        <div class="col-12 mt-3">
                            <h4>Select arm:</h4>
                        </div>
                        <div class="col-12 mb-4">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input border-primary" type="radio" name="ArmOptions"
                                       id="LeftArm" value="LeftArm" @onclick='() => SelectArm("LeftArm")'>
                                <label class="form-check-label" for="LeftArm">Left Arm</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input border-primary" type="radio" name="ArmOptions"
                                       id="RightArm" value="RightArm" @onclick='() => SelectArm("RightArm")'>
                                <label class="form-check-label" for="RightArm">Right Arm</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <h4>Select motor:</h4>
                        </div>
                        <div class="col-12 mb-4">
                            @for (int i = 1; i <= 7; i++)
                            {
                                int mi = i;
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input border-primary" type="radio" name="MotorOptions"
                                           id="@($"m{mi}Radio")" value="@($"m{mi}")" @onclick='() => SelectMotor($"m{mi}")'>
                                    <label class="form-check-label" for="@($"m{mi}Radio")">@($"m{mi}")</label>
                                </div>
                            }
                        </div>
                        <div class="col-12">
                            <h4>Select algorithm:</h4>
                        </div>
                        <div class="col-12 mb-4">
                            @foreach (var algo in new[] { "PWM", "Velocity", "Pressure" })
                            {
                                if (Params!.selectedMotor == "m7" || algo != "Pressure") {
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input border-primary" type="radio" name="AlgoOptions"
                                               id="@algo" value="@algo" @onclick='() => SelectAlgo(algo)'>
                                        <label class="form-check-label" for="@algo">@algo</label>
                                    </div>
                                }
                            }
                        </div>
                        <div class="col-12">
                            <h4>Select value:</h4>
                        </div>
                        <div class="col-12 mb-4">
                            @switch (Params!.selectedAlgo)
                            {
                                case "Pressure":
                                    @foreach (var pressure in new[] { "0", "1", "2", "5" })
                                    {
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input border-primary" type="radio" name="PressureOptions"
                                                   id="@pressure" value="@pressure" @onclick='() => SelectPressure(pressure)'
                                                   checked="@(pressure == Params!.selectedPressure)">
                                            <label class="form-check-label" for="@pressure">@pressure</label>
                                        </div>
                                    }
                                    break;
                                case "PWM":
                                    <span class="fs-16">pwm [-100%-100%]:</span>
                                    <input class="form-control motor-input d-inline-block @GetPwmClass(Params!.selectedPWM)"
                                            style="width:100px"
                                            value="@Params!.selectedPWM"
                                            @oninput="OnPwmInput"
                                            />
                                    break;
                                case "Velocity":
                                    @foreach (var velocity in new[] { "1", "5", "20", "-1", "-5", "-20"})
                                    {
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input border-primary" type="radio" name="VelocityOptions"
                                                   id="@velocity" value="@velocity" @onclick='() => SelectVelocity(velocity)'
                                                   checked="@(velocity == Params!.selectedVelocity)">
                                            <label class="form-check-label" for="@velocity">@velocity mm/deg/sec</label>
                                        </div>
                                    }
                                    break;
                                default:
                                    <span class="fs-16">Select algorithm in order to set the value</span>
                                    break;
                            }
                        </div>
                        <div class="col-12">
                            <h4>Select Time:</h4>
                        </div>
                        <div class="col-12 mb-4">
                            @foreach (var sec in new[] { "1", "2", "5" })
                            {
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input border-primary" type="radio" name="TimeoutOptions"
                                           id="@sec" value="@sec"
                                           @onclick='() => { CustomSelected = false; SelectTimeout(sec); }'>
                                    <label class="form-check-label" for="@sec">@sec Seconds</label>
                                </div>
                            }

                            <div class="form-check form-check-inline">
                                <input class="form-check-input border-primary" type="radio" name="TimeoutOptions"
                                       id="TimeoutCustom" value="custom"
                                       @onclick='@(() => { CustomSelected = true; SelectTimeout(Params!.selectedTimeout?.ToString() ?? ""); })'>
                                <label class="form-check-label me-2" for="TimeoutCustom">Custom</label>

                                <input type="number"
                                       class="form-control d-inline-block motor-input @GetInputClass(Params!.selectedTimeout)"
                                       style="width:6rem"
                                       min="1" max="20" step="1" placeholder=""
                                       @bind="Params!.selectedTimeout" @bind:event="oninput"
                                       disabled="@(CustomSelected ? (bool?)null : true)" />
                            </div>
                        </div>
                        <div class="col-12 mb-4">
                            <button class="btn btn-success-light mx-auto d-block"
                                    @onclick="RunClicked"
                                    title="Run"
                                    disabled="@(!CanRun())"
                                >
                                &nbsp;&nbsp;&nbsp;Run&nbsp;&nbsp;&nbsp;
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter] public string Name { get; set; } = new("");
    [Parameter] public string IdPrefix { get; set; } = Guid.NewGuid().ToString("N");
    [Parameter] public MotorWizardParams? Params { get; set; }

    [Parameter] public EventCallback RunClicked { get; set; }

    private bool CustomSelected;       // enables the textbox only when "Custom" is selected

    private void SelectArm(string arm) => Params!.selectedArm = arm;
    private void SelectMotor(string motor)
    {
        Params!.selectedMotor = motor;
        if (Params!.selectedMotor != "m7" && Params!.selectedAlgo == "Pressure")
            Params!.selectedAlgo = "";
    }
    private void SelectVelocity(string velocity) => Params!.selectedVelocity = velocity;
    private void SelectPressure(string pressure) => Params!.selectedPressure = pressure;
    private void SelectAlgo(string algo) => Params!.selectedAlgo = algo;
    private void SelectTimeout(string sec) => Params!.selectedTimeout = sec;

    private void OnPwmInput(ChangeEventArgs e)
    {
        Params!.selectedPWM = e.Value?.ToString() ?? string.Empty;
    }

    private string GetPwmClass(string value)
    {
        if (string.IsNullOrWhiteSpace(value)) return "empty";
        int ivalue;
        return int.TryParse(value, out ivalue) && (ivalue >= -100) && (ivalue<=100) ? "valid" : "invalid";
    }

    private bool CanRun()
    {
        if (string.IsNullOrEmpty(Params!.selectedArm)) return false;
        if (string.IsNullOrEmpty(Params!.selectedMotor)) return false;
        if (string.IsNullOrEmpty(Params!.selectedAlgo)) return false;

        if (Params!.selectedAlgo == "Pressure" && string.IsNullOrEmpty(Params!.selectedPressure))
            return false;

        if (Params!.selectedAlgo == "PWM")
        {
            if (!int.TryParse(Params!.selectedPWM, out var v) || v < -100 || v > 100)
                return false;
        }

        if (Params!.selectedAlgo == "Velocity" && string.IsNullOrEmpty(Params!.selectedVelocity))
            return false;

        if (string.IsNullOrEmpty(Params!.selectedTimeout)) return false;

        if (CustomSelected)
        {
            if (!int.TryParse(Params!.selectedTimeout, out var t) || t < 1 || t > 20)
                return false;
        }

        return true;
    }

    protected string GetInputClass(string? value)
    {
        if (!CustomSelected) return "empty";

        return string.IsNullOrWhiteSpace(value)
            ? "empty"
            : (int.TryParse(value, out var n) && n is >= 1 and <= 20 ? "valid" : "invalid");
    }

}

