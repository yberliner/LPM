@inherits LPM.Shared.AccordionInputBase

@* ---------- markup ---------- *@
<div class="motor-wrapper my-2 mx-2">
    <div class="accordion accordion-primary" id="@ParentId">
        <div class="accordion-item motor-card">
            <h2 class="accordion-header" id="@HeadingId">
                <button class="accordion-button"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#@CollapseId"
                        aria-controls="@CollapseId"
                        aria-expanded="true"
                        style="background: transparent;">
                    Boards Information
                </button>
            </h2>

            <div id="@CollapseId"
                 class="accordion-collapse collapse show"
                 aria-labelledby="@HeadingId"
                 data-bs-parent="#@ParentId">

                <div class="accordion-body" style="padding:0;">
                    <table class="table table-sm motor-table mb-0" style="@TableStyle">
                        <thead>
                            <tr >
                                <th rowspan="2" class="text-center" style="width:20%;">Board<br />Name</th>
                                <th colspan="2" class="text-center">Left</th>
                                <th colspan="2" class="text-center">Right</th>
                            </tr>
                            <tr>
                                <th class="text-center" style="width:20%;border-left-width:2px;">ID</th>
                                <th class="text-center" style="width:20%;">Version</th>
                                <th class="text-center" style="width:20%;">ID</th>
                                <th class="text-center" style="width:20%;">Version</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < BoardName.Count; i++)
                            {
                                int Locali = i;
                                <tr>
                                    <td class="text-left">@BoardName[Locali]</td>
                                    <td class="text-center">@LeftID[Locali]</td>
                                    <td class="text-center">@LeftVersion[Locali]</td>
                                    <td class="text-center">@RightID[Locali]</td>
                                    <td class="text-center">@RightVersion[Locali]</td>
                                </tr>
                            }

                            <tr>
                                <td colspan="4" class="text-center h-100">
                                    <div class="d-flex flex-column justify-content-end align-items-center h-100">
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    /* ---------- unique IDs via IdPrefix ---------- */
    [Parameter] public string IdPrefix { get; set; } = Guid.NewGuid().ToString("N");
    [Parameter] public string? TableStyle { get; set; }

    private string ParentId => $"accordion_CHULed_{IdPrefix}";
    private string HeadingId => $"heading_CHULed_{IdPrefix}";
    private string CollapseId => $"collapse_CHULed_{IdPrefix}";

    /* ---------- original component logic ---------- */
    private List<string> BoardName { get; } = new() { "RCB", "4MB", "M5B", "EEF" };

    [Parameter] public string[] LeftID { get; set; } = Array.Empty<string>();
    [Parameter] public string[] LeftVersion { get; set; } = Array.Empty<string>();
    [Parameter] public string[] RightID { get; set; } = Array.Empty<string>();
    [Parameter] public string[] RightVersion { get; set; } = Array.Empty<string>();
}
