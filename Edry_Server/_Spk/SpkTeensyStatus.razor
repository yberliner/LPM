@inherits LPM.Shared.AccordionInputBase

@* ---------- markup ---------- *@
<div class="motor-wrapper my-2 mx-2">
    <div class="accordion accordion-primary" id="@ParentId">
        <div class="accordion-item motor-card">
            <h2 class="accordion-header" id="@HeadingId">
                <button class="accordion-button"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#@CollapseId"
                        aria-controls="@CollapseId"
                        aria-expanded="true"
                        style="background: transparent;">
                    Temperature Sensors
                </button>
            </h2>

            <div id="@CollapseId"
                 class="accordion-collapse collapse show"
                 aria-labelledby="@HeadingId"
                 data-bs-parent="#@ParentId">

                <div class="accordion-body" style="padding:0;">
                    <table class="table table-sm motor-table mb-0" style="@TableStyle">
                        <thead>
                            <tr>
                                <th class="text-center" style="width:70%;">Teensy</th>
                                <th class="text-center" style="width:30%;">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < TeensyName.Count; i++)
                            {
                                int Locali = i;
                                <tr>
                                    <td class="text-left">@TeensyName[Locali]</td>
                                    <td>
                                        @($"0x{TeensyValues[Locali]:X8}")
                                    </td>
                                </tr>
                            }
                            <tr>
                                <td colspan="2" class="text-center h-100">
                                    <div class="d-flex flex-column justify-content-end align-items-center h-100">
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    /* ---------- unique IDs via IdPrefix ---------- */
    [Parameter] public string IdPrefix { get; set; } = Guid.NewGuid().ToString("N");
    [Parameter] public string? TableStyle { get; set; }

    private string ParentId => $"accordion_TS_{IdPrefix}";
    private string HeadingId => $"heading_TS_{IdPrefix}";
    private string CollapseId => $"collapse_TS_{IdPrefix}";

    /* ---------- original component logic ---------- */
    private List<string> TeensyName { get; } = new() { "Mic.C.B Teensy 1 Status", "Mic.C.B Teensy 2 Status", "Mic.C.B Teensy 3 Status" };

    [Parameter] public ulong[] TeensyValues { get; set; } = Array.Empty<ulong>();
}
