@inherits LPM.Shared.AccordionInputBase

@* ---------- markup ---------- *@
<div class="motor-wrapper my-2 mx-2">
    <div class="accordion accordion-primary" id="@ParentId">
        <div class="accordion-item motor-card">
            <h2 class="accordion-header" id="@HeadingId">
                <button class="accordion-button"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#@CollapseId"
                        aria-controls="@CollapseId"
                        aria-expanded="true"
                        style="background: transparent;">
                    Temperature Sensors
                </button>
            </h2>

            <div id="@CollapseId"
                 class="accordion-collapse collapse show"
                 aria-labelledby="@HeadingId"
                 data-bs-parent="#@ParentId">

                <div class="accordion-body" style="padding:0;">
                    <table class="table table-sm motor-table mb-0" style="@TableStyle">
                        @* <thead>
                            <tr>
                                <th class="text-center" style="width:70%;">Voltage</th>
                                <th class="text-center" style="width:30%;">Value</th>
                            </tr>
                        </thead> *@
                        <tbody>
                            @for (int i = 0; i < TempName.Count; i++)
                            {
                                int Locali = i;
                                <tr>
                                    <td class="text-left">@TempName[Locali]</td>
                                    <td>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span>@TempValues[Locali].ToString("F2")</span>
                                            <span>(c)</span>
                                        </div>
                                    </td>
                                </tr>
                            }

                            <tr>
                                <td colspan="2" class="text-center h-100">
                                    <div class="d-flex flex-column justify-content-end align-items-center h-100">
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    /* ---------- unique IDs via IdPrefix ---------- */
    [Parameter] public string IdPrefix { get; set; } = Guid.NewGuid().ToString("N");
    [Parameter] public string? TableStyle { get; set; }

    private string ParentId => $"accordion_TempSensor_{IdPrefix}";
    private string HeadingId => $"heading_TempSensor_{IdPrefix}";
    private string CollapseId => $"collapse_TempSensor_{IdPrefix}";

    /* ---------- original component logic ---------- */
    private List<string> TempName { get; } = new() { "Temperature Sensor VC Inlet", "Temperature Sensor 2"};

    [Parameter] public double[] TempValues { get; set; } = Array.Empty<double>();

}
